@model Lab7.Models.Product

@{
    ViewData["Title"] = "Xoá sản phẩm";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc muốn xoá sản phẩm này?</h4>

<dl class="row">
    <dt class="col-sm-2">Tên</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Giá</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Tồn kho</dt>
    <dd class="col-sm-10">@Model.Stock</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
