@{
	ViewData["Title"] = "Delete Task";
	int taskId = (int)ViewBag.TaskId;
	string taskName = (string)ViewBag.TaskName;
}

<h2>Delete Task</h2>
<p>Are you sure you want to delete the task "<strong>@taskName</strong>"?</p>
<form method="post">
	<input type="hidden" name="id" value="@taskId" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a href="/Todo/Index" class="btn btn-secondary">Cancel</a>
</form>