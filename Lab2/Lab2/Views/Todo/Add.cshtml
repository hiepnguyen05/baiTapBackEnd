@{
    ViewData["Title"] = "Add Task";
}

<h2>Add Task</h2>

<form method="post">
    <div class="form-group">
        <label for="newTask">Task</label>
        <input type="text" class="form-control" id="newTask" name="newTask" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Add</button>
</form>
