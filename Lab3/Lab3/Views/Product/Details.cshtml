@model List<Product>
<div class="container" action="POST">
	<h3>DANH SÁCH SẢN PHẨM </h3>
	<a class="btn btn-primary mb-2" href="/User/Add">Thêm mới</a>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Price</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.id</td>
					<td>@item.name</td>
					<td>@item.price</td>
					<td>
						<div>
							<a class="btn btn-warning" href="/User/Edit"
							   onclick="/User/Edit">Edit</a>
							<a class="btn btn-danger" onclick="/User/Delete">Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>


